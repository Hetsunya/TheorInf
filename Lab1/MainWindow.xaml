<Window x:Class="lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab1"
        mc:Ignorable="d"
        Title="Решение задач по теории информации" Height="600" Width="900">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Размер матрицы -->
        <GroupBox Grid.Row="0" Header="Размер матрицы" Margin="5">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Строки (Z): " VerticalAlignment="Center"/>
                <ComboBox x:Name="RowsComboBox" Width="50" SelectedIndex="1" Margin="5">
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="4"/>
                </ComboBox>
                <TextBlock Text="Столбцы (W): " VerticalAlignment="Center" Margin="10,0,0,0"/>
                <ComboBox x:Name="ColsComboBox" Width="50" SelectedIndex="3" Margin="5">
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="4"/>
                </ComboBox>
                <Button x:Name="UpdateMatrixButton" Content="Обновить матрицу" Margin="10,0" Click="UpdateMatrixButton_Click"/>
            </StackPanel>
        </GroupBox>

        <!-- Тип задачи -->
        <GroupBox Grid.Row="1" Header="Тип задачи" Margin="5">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Выберите тип задачи: " VerticalAlignment="Center"/>
                <ComboBox x:Name="TaskTypeComboBox" Width="200" SelectedIndex="0" Margin="5" SelectionChanged="TaskTypeComboBox_SelectionChanged">
                    <ComboBoxItem Content="Дана p(Zi, Wj)"/>
                    <ComboBoxItem Content="Дана p(Wj | Zi) и p(Zi)"/>
                    <ComboBoxItem Content="Дана p(Zi | Wj) и p(Wj)"/>
                </ComboBox>
            </StackPanel>
        </GroupBox>

        <!-- Ввод данных -->
        <GroupBox Grid.Row="2" Header="Ввод данных" Margin="5">
            <StackPanel>
                <!-- Матрица -->
                <TextBlock Text="Матрица вероятностей:" Margin="0,0,0,5"/>
                <ItemsControl x:Name="MatrixInput">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <ItemsControl ItemsSource="{Binding}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBox Width="60" Margin="2" Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Ансамбль -->
                <TextBlock x:Name="EnsembleLabel" Text="Ансамбль p(Wj):" Margin="0,10,0,5" Visibility="{Binding IsEnsembleVisible, Converter={StaticResource BoolToVisConverter}}"/>
                <ItemsControl x:Name="EnsembleInput" Visibility="{Binding IsEnsembleVisible, Converter={StaticResource BoolToVisConverter}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBox Width="60" Margin="2" Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </GroupBox>

        <!-- Кнопка для расчёта -->
        <Button x:Name="CalculateButton" Grid.Row="3" Content="Рассчитать" Width="100" Height="30" Margin="5" Click="CalculateButton_Click"/>

        <!-- Вывод результатов -->
        <GroupBox Grid.Row="4" Header="Результаты" Margin="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="ResultsTextBlock" TextWrapping="Wrap"/>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>